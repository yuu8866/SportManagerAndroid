<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bg"
    >
    <!--    android:background="@drawable/bg"-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ng1">
    </ImageView>

    <View
        android:layout_width="wrap_content"
        android:layout_height="440dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/roundbutton2"
        android:elevation="3dp"
        >
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="7dp"
        android:orientation="horizontal"
        android:padding="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/icon_image_view"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/your_icon" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="个人信息"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"

            android:layout_height="3dp"
            android:background="#FFFFFF" />
        <TextView
            android:id="@+id/u_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="58dp"
            android:background="@drawable/roundbutton3"
            android:clickable="false"
            android:gravity="center_vertical"
            android:hint="用户名："
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="#e0e5df"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/u_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/u_name"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundbutton3"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="12"
            android:paddingLeft="10dp"
            android:textColorHint="#e0e5df" />

        <EditText
            android:id="@+id/useu_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/u_password"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundbutton3"
            android:hint="请输入姓名"
            android:inputType="textPersonName"
            android:maxLength="4"
            android:paddingLeft="10dp"
            android:textColorHint="#e0e5df" />

        <EditText
            android:id="@+id/u_sex"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/useu_name"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundbutton3"

            android:hint="请输入性别"
            android:inputType="text"

            android:paddingLeft="10dp"
            android:textColorHint="#e0e5df" />

        <EditText
            android:id="@+id/u_birthday"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/u_sex"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundbutton3"
            android:hint="请输入生日"
            android:inputType="date"
            android:paddingLeft="10dp"
            android:textColorHint="#e0e5df" />

        <EditText
            android:id="@+id/u_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/u_birthday"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundbutton3"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:paddingLeft="10dp"
            android:textColorHint="#e0e5df" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="440dp"
            android:weightSum="2">

            <Button
                android:id="@+id/update_user_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/roundbutton2"
                android:onClick="Check"
                android:text="返回"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="10dp" />

            <Button
                android:id="@+id/u_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/roundbutton2"
                android:onClick="Check"
                android:text="确认"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>