<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:gravity="center"
    app:cardCornerRadius="4dp"
    android:background="#fbf3f3">


    <ImageView
        android:id="@+id/user_sport_info_img"
        android:layout_weight="1"
        android:layout_width="20dp"
        android:layout_height="100dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:textSize="20sp"
        android:gravity="center"
        android:text="器械名"
        android:id="@+id/user_Sport_Name"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:textSize="20sp"
        android:gravity="center"
        android:text="租赁人"
        android:id="@+id/user_sport_author"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:textSize="20sp"
        android:gravity="center"
        android:text="类型"
        android:id="@+id/user_Sport_Type"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:textSize="20sp"
        android:gravity="center"
        android:text="价格"
        android:id="@+id/user_sport_pice"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:textSize="20sp"
        android:gravity="center"
        android:text="租金"
        android:id="@+id/user_Sport_Rank"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:singleLine="false"
        android:textSize="20sp"
        android:gravity="center"
        android:text="平台"
        android:id="@+id/user_sport_publish"/>

</LinearLayout>