<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <!--    android:background="@drawable/bg"-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ng1">
    </ImageView>

    <View
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/roundbutton2"
        android:elevation="5dp"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="7dp"
        android:orientation="horizontal"
        android:padding="75dp">


        <!-- 文字水平和垂直居中 -->

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="登录"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:background="@drawable/roundbutton3"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="用户名"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="@color/mainstr"
            android:textColorHint="#BE000000" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/name"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundbutton3"
            android:hint="密码"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="@color/mainstr"
            android:textColorHint="#BE000000" />

        <CheckBox
            android:id="@+id/rmber_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/white"
            android:text="记住密码"
            android:textColor="#FFFFFF" />

        <!--        <CheckBox
            android:buttonTint="@color/white"
            android:id="@+id/auto_login"
            android:layout_width="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/password"
            android:text="自动登录" />-->

    </RelativeLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        android:text="立即登录"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/roundbutton2"
        />
    <Button
        android:id="@+id/register"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_centerHorizontal="true"
        android:text="注册"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/roundbutton2"
        />
    <Button
        android:id="@+id/admin"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"
        android:layout_centerHorizontal="true"
        android:text="管理员登录"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/roundbutton2"
        />

</RelativeLayout>