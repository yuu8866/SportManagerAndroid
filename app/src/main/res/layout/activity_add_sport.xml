<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_marginTop="50dp"
    tools:context=".admin.houtai_admin.admin_add_sport">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="添加器材"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_height="wrap_content">
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_marginTop="42dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="索引值："
            android:textSize="18sp" />

        <EditText
            android:layout_marginTop="30dp"
            android:digits="1234567890"
            android:id="@+id/et_sportid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="number"
            android:hint="请输入索引值"
            android:textColorHint="@color/textColorHint"
            android:layout_weight="2"/>

        <ImageView
            android:id="@+id/add_sportimg"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/tjtp"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="器材名："
            android:textSize="18sp"/>
        <EditText
            android:hint="请输入器材名"
            android:textColorHint="@color/textColorHint"
            android:id="@+id/et_sportname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="类  别 ："
            android:textSize="18sp"/>
        <EditText
            android:hint="请输入器材类型"
            android:textColorHint="@color/textColorHint"
            android:id="@+id/et_sporttype"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="发布者："
            android:textSize="18sp"/>
        <EditText
            android:hint="请输入发布人"
            android:textColorHint="@color/textColorHint"
            android:id="@+id/et_sportuser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="平  台："
            android:textSize="18sp"/>
        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner2"
            android:layout_weight="2" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="价   格 ："
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/et_sportprice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:digits="1234567890"
            android:hint="请输入租赁价格"
            android:textColorHint="@color/textColorHint"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="评   分 ："
            android:textSize="18sp"/>
        <EditText
            android:digits="1234567890."
            android:hint="请输入器材评分评分"
            android:textColorHint="@color/textColorHint"
            android:id="@+id/et_sportrank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="要   求 ："
            android:textSize="18sp"/>
        <EditText
            android:gravity="top"
            android:hint="要求描述"
            android:id="@+id/et_sportcomment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:inputType="textMultiLine"/>
    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btn_sportcommit"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbutton2"
            android:text="添加"/>
        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/btn_sportback"
            android:text="返回"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbutton2"
            >
        </Button>
    </LinearLayout>

</LinearLayout>